<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="MonitorInactividad.MainWindow"
        Title="Monitor de Inactividad" Width="400" Height="200">

     <StackPanel Margin="10" Spacing="10">
        <TextBlock Text="Monitor de Inactividad Activo" FontSize="16"/>

        <StackPanel Orientation="Horizontal" Spacing="5">
            <TextBlock Text="Tiempo límite (min):" VerticalAlignment="Center"/>
            <TextBox x:Name="txtTiempoLimite" Width="50" Text="1"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Spacing="5">
            <Button x:Name="btnIniciar" Content="Iniciar"/>
            <Button x:Name="btnDetener" Content="Detener"/>
        </StackPanel>        

              <!-- NUEVO CHECKBOX -->
        <CheckBox x:Name="chkInicioAutomatico"
                Content="Iniciar automáticamente"
                Checked="chkInicioAutomatico_Checked"
                Unchecked="chkInicioAutomatico_Unchecked" />

        <TextBlock x:Name="txtStatus" Text="Esperando actividad..." Margin="0,10,0,0"/>
    </StackPanel>
</Window>